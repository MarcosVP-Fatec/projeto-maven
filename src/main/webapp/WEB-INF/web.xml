<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <!-- Indicamos a classe java que serÃ¡ o servlet -->
    <servlet>
        <servlet-name>mainServlet</servlet-name>
        <servlet-class>br.gov.sp.fatec.projetomaven.controller.MainController</servlet-class>
    </servlet>
    <!-- O mapping indica em qual url o servelet vai atender -->
    <servlet-mapping>
        <servlet-name>mainServlet</servlet-name>
        <url-pattern>/</url-pattern> <!-- Por responder dentro do / deletamoso o index.jsp -->
    </servlet-mapping>  

</web-app>
